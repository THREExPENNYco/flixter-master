<br /> 



<div class="booyah-box col-10 offset-1"> 
  <h1><%= @course.title %></h1>
  <%= image_tag(@course.image_url) %> 
  <br /> 
  <div class="row">
    <div class="col-sm-4 col-12 text-center">
      <span class="badge badge-default"> 
        <%= number_to_currency @course.cost %> 
      </span> 
      <% if current_user && current_user == @course.user %> 
      <br /> 
      <br /> 
      <%= link_to 'Administrator', instructor_course_path(@course), class: 'btn btn-danger btn-large' %> 
      <% end %> 
      <br /> 
      <br /> 

      <% if current_user && current_user.enrolled_in?(@course) %> 
        <h3 class="badge badge-info">You Are Enrolled!</h3> 
      <% else %> 
      <%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn=primary', method: :post %> 
      <% end %> 
    </div> 
    <div class="col-sm-8 col-12"> 
      <%= @course.description %> 
    </div> 
    <% @course.sections.each do |section| %> 
    <div class="section"> 
      <h3> 
        <%= link_to lesson_path(section.lessons) do %> 
        <% section.title %>
        <% end %> 
      </h3> 
      <div class="row"> 
        <% section.lessons.each do |lesson| %>
        <div class="col-12">  
          <div class="lesson text-center"> 
            <br />  
            <%= link_to lesson_path(lesson) do %> 
            <b><%= lesson.title %></b> 
            <br /> 
            <%= lesson.subtitle %> 
            <% end %>
          </div>  
        </div> 
        <% end %> 
      </div> 
    <br clas="clr" /> 
    </div> 
    <% end %> 
  </div> 
</div> 